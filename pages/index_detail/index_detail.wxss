page{
  padding-bottom: 90rpx;
}
swiper{
  height: 400rpx;
  overflow: hidden;
}
swiper-item{
  width: 100%;
  height: 100%;
}
swiper image{
  width: 100%;
}

.top_info{
  display: flex;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}
.top_info .title1{
  flex: 5;
  color: #000;
  font-size: 34rpx;
  padding: 8rpx 20rpx;
}
.top_info .collect{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #ccc;
  padding-left: 10rpx;
}
.collect .img{
  width: 60rpx;
  height: 60rpx;
}
.price_row{
  padding: 10rpx 20rpx;
  position: relative;
}
.new_price{
  font-size: 60rpx;
  color: #ff5777;
}
.old_price{
  font-size: 30rpx;
  color: #666;
  text-decoration: line-through;
  padding: 0 20rpx;
}
.dazhe{
  background: #f13e3a;
  padding: 10rpx;
  color: #fff;
  border-radius: 30rpx;
  position: absolute;
  top: -9rpx;

}
.logo{
  border-top: 8rpx solid #ccc;
  display: flex;
}
.logo image{
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #dedede;
  border-radius: 50%;
  overflow: hidden;
  margin: 30rpx 40rpx 30rpx 20rpx;
}
.logo .shop_name{
  display: flex;
  align-items: center;
}
.shop_info{
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 8rpx solid #ccc;
}
.shop_info .num{
  flex: 1;
  display: flex;
  border-right: 2rpx solid #ccc;
}
.num .goods{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.num .sells{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.shop_info .shop_desc{
  margin:0 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.desc{
  display: flex;
  margin-bottom: 10rpx;
}
.shop_desc .name{
  flex: 4;
  display: flex;
  justify-content: center;
}
.shop_desc .score{
  flex: 2;
  display: flex;
  justify-content: center;
}
.shop_desc .better{
  flex: 1;
  display: flex;
  justify-content: center;
}
.bg1{
  background: green;
}
.bg2{
  background: red;
}
.show{
  margin: 60rpx 30rpx;
  position: relative;
  height: 160rpx;
}
.show::before{
  content: "";
  position: absolute;
  width: 300rpx;
  height: 2rpx;
  top: 0;
  left: 0;
  background: #333;
}
.show::after{
  content: "";
  position: absolute;
  width: 300rpx;
  height: 2rpx;
  bottom: 1rpx;
  right: 1rpx;
  background: #333;
}
.show_title{
  margin-left: 20rpx;
}
.pinglun{
  margin: 40rpx 30rpx;
}
.kehu_info{
  display: flex;
  margin-bottom: 30rpx;
}
.kehu_text{
  font-size: 40rpx;
   line-height: 100rpx;
  height: 100rpx;
 }
.kehu_info image{
  flex: 1;
  border-radius: 50%;
}
.kehu_info text{
  flex: 4;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}
.kehu image{
  width: 200rpx;
}
.kehu .style{
  font-size: 26rpx;
  color: #666;
  margin: 20rpx 0 30rpx;
}
.shangjia{
  font-size: 30rpx;
  color: #333;
  background: #dedede;
  border-radius: 30rpx;
}


.goods{
  display: flex;
  flex-wrap: wrap; 
  justify-content: space-evenly;
}
.goods-item{
  width: 46%;
  position: relative;
  text-align: center;
  color: #333;
  padding-bottom: 130rpx; 
}
.goods-item .img{
  width: 100%;
  border-radius: 10rpx;
}
.desc-info{
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
}
.title{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  font-size: 35rpx;
}
.desc-info .recommend_title{
  font-size: 30rpx;
}
.info{
  font-size: 26rpx;
  padding: 6rpx 0 10rpx;
}
.info .icon{
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:5rpx;
}
.info .price{
  color:#ff5777;
  margin-right: 40rpx;
}
.cfav{
  position: relative;
}

.btm_tool{
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
}
.btm_tool .tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.btm_tool image{
  width: 40rpx;
  height: 40rpx;
}
.btm_tool button{
  position: absolute;
  left:0;
  top: 0;
  width: 100%;
  height: 100%; 
  opacity: 0;
}
.btm_tool .btm_cart{
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #c80090;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
.btm_tool .btm_buy{
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #a86800;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}


.backtop{
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
}
.backtop image{
  width: 80rpx;
  height: 80rpx;
}