/* components/w-goods-item/w-goods-item.wxss */
.goods-item{
  text-align: center;
  color: #333;
  padding-bottom: 85rpx; 
}
.goods-item .img{
  width: 100%;
  border-radius: 10rpx;
}
.desc-info{
  position: absolute;
  left: 0;
  bottom: 5rpx;
  right: 0;
}
.title{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
}
.info{
  font-size: 26rpx;
  padding: 6rpx 0 10rpx;
}
.info .icon{
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:5rpx;
}
.info .price{
  color:#ff5777;
  margin-right: 40rpx;
}
.cfav{
  position: relative;
}
